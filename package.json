{
  "name": "@onerlaw/verena",
  "version": "1.0.0",
  "scripts": {
    "postinstall": "patch-package",
    "clean": "nx run-many -t clean && rm -rf node_modules package-lock.json",
    "clean:install": "npm run clean && npm install",
    "test": "nx run-many -t test",
    "start": "nx run-many -t start",
    "build": "nx run-many -t build",
    "lint:format": "nx run-many -t lint:format",
    "snyk": "snyk test --all-projects",
    "build:image": "git tag build-image -f && git push origin build-image",
    "build:deploy": "git tag build-deploy -f && git push origin build-deploy",
    "deploy": "git tag deploy -f && git push origin deploy",
    "submit:ios": "npm run submit:ios --workspace=packages/app",
    "submit:android": "npm run submit:android --workspace=packages/app"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "workspaces": [
    "packages/server",
    "packages/app"
  ],
  "devDependencies": {
    "nx": "21.5.2",
    "patch-package": "^8.0.0",
    "snyk": "^1.1299.0"
  },
  "overrides": {
    "react-native": "0.81.4",
    "zod": "^4.1.8",
    "markdown-it": "^13.0.2",
    "@react-native-async-storage/async-storage": "2.2.0",
    "react-native-web": "0.21.1"
  }
}
