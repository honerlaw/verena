{
  "name": "@onerlaw/verena-server",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "node --test",
    "start:local": "tsx --watch --no-cache --env-file=.env src/index.mts",
    "build": "npm run generate && tsc",
    "build:web": "rm -rf static && cd ../app && npm run web:export && cd ../server && cp -r ../app/dist static",
    "start": "node dist/index.js",
    "format": "prettier --write \"src/**/*.{js,ts,mjs,mts}\"",
    "lint": "eslint \"src/**/*.{js,ts,mjs,mts}\" --fix",
    "lint:format": "npm run lint && npm run format",
    "clean": "rm -rf dist node_modules tsconfig.tsbuildinfo package-lock.json src/generated",
    "generate:prisma": "npx prisma generate",
    "generate": "npm run generate:prisma"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "openapi-typescript": "^7.9.1",
    "prettier": "^3.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@clerk/express": "^1.7.30",
    "@onerlaw/framework": "^1.0.36",
    "@openai/agents": "^0.1.2",
    "@trpc/server": "^11.5.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "plaid": "^38.1.0",
    "prisma": "^6.15.0",
    "superjson": "^2.2.2",
    "zod": "^4.1.8"
  },
  "overrides": {
    "zod": "^4.1.8"
  }
}
